{
  "manifest_version": 2,

  "name": "Spotify Web Extension",
  "description": "This extension allows accesible use of Spotify from a web browser.",
  "version": "1.0",
  "homepage_url": "https://www.google.com/",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Spotify"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "oersistent": false,
    "page" : "background.html" 
  },
  "permissions": [
    "http://feeds.gawker.com/*"
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}